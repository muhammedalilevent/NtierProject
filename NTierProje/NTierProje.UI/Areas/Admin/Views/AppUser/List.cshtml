
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}
@using PagedList;
@using PagedList.Mvc

@model IPagedList<NTier.Model.Entities.AppUser>
<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kullanıcı İsmi</th>
                <th>Kullanıcı Soyismi</th>
                <th>UserName</th>
                <th>Password</th>
                <th>Telefon Numarası</th>
                <th>Adres</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Fotoğraf</th>
                <th colspan="2">Güncelle / Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.SurName</td>
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Adress</td>
                    <td>@item.Email</td>
                    <td>@item.Role</td>
                    <td><img src="@item.ImagePath" style="display:block;" width="30" height="30" /></td>
                    <td>
                        <a href="/Admin/AppUser/update/@item.Id">Güncelle</a>
                        /
                        <a href="/Admin/AppUser/delete/@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagedList">
        @Html.PagedListPager(Model, page => Url.Action("List", "AppUser", new { page }), PagedListRenderOptions.Classic)
    </div>
</div>
