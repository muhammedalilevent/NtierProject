
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}
@model NTier.Model.Entities.Category
<form action="/Admin/category/update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Kategori İsmi</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Kategori Açıklaması</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>
    @Html.HiddenFor(x => x.Id)
    <input type="submit" name="name" value="Güncelle" class="form-control btn btn-primary" />
</form>