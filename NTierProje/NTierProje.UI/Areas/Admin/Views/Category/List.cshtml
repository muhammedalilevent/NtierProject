@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}
@model List<NTier.Model.Entities.Category>
<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kategori İsmi</th>
                <th>Kategori Açıklaması</th>
                <th colspan="2">Güncelle / Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/category/update/@item.Id">Güncelle</a>
                        /
                        <a href="/Admin/category/delete/@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>