
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <form action="/Member/Register/Register" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="Name" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Surname">Surname</label>
            <input type="text" name="SurName" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="username">User Name</label>
            <input type="text" name="UserName" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" name="Password" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="Adress" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" name="PhoneNumber" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" name="Email" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Image">User Photo</label>
            <input type="file" name="Image" class="form-control">
        </div>
        <input type="submit" name="name" value="Giriş Yap" class="btn btn-primary form-control" />
    </form>
    <p><a href="/Member/Register/Register">Register Here</a> (Or) go back to <a href="/Home/Index">Home<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a></p>
</div>

@section scripts{
    <script>

        //İsim soyisim ve email regex kontrolleri

        function check_Alpha(letters) {
            var regex = /^[a-zA-Z]+$/;
            var regex2 = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

            if ((regex.test(letters.Name.value) == false) || (regex.test(letters.Surname.value) == false)) {
                alert("Geçersiz İsim");
                return false;
            }
            if (regex2.test(letters.Email.value)==false) {
                alert("Geçersiz Email Adresi");
                letters.Email.focus();
                return false;
            }

            return true;
        }



    </script>
}